# ============================================
# CardioVoice Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# -----------------------
# Flask Configuration
# -----------------------
FLASK_ENV=development
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production
PORT=5000

# -----------------------
# CORS Configuration
# -----------------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_CREDENTIALS=false

# -----------------------
# GigaChat API
# -----------------------
# Get your key from https://developers.sber.ru/portal/products/gigachat
GIGACHAT_AUTH_KEY=your-gigachat-api-key-here

# -----------------------
# Security Settings
# -----------------------
# Maximum audio file upload size in MB
MAX_UPLOAD_SIZE_MB=10
# Global rate limit (requests per minute)
RATE_LIMIT_PER_MINUTE=100
# SSL verification (set to false ONLY for local development if needed)
VERIFY_SSL=true

# -----------------------
# JWT Settings
# -----------------------
JWT_ALGORITHM=HS256
# Token expiration in hours
JWT_EXPIRATION_HOURS=24
